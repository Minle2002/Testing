<% layout('layout/boilerplate') %>
    <h1>Edit Video Game</h1>
    <form action="/videogames/<%= videogame._id %>?_method=PUT" method="POST">

        <div class="mb-2">
            <label class="form-label" for="title">Title:</label>
            <input class="form-control" type="text" id="title" name="videogame[title]" value="<%= videogame.title %>">
        </div>
        <div class="mb-2">
            <label class="form-label" for="price">Price:</label>
            <input class="form-control" type="text" id="price" name="videogame[price]" value="<%= videogame.price %>">
        </div>
        <div class="mb-2">
            <label class="form-label" for="description">Description:</label>
            <textarea class="form-control" id="description" name="videogame[description]"
                value="<%= videogame.description %>"></textarea>
        </div>
        <div class="mb-2">
            <button type="submit">save</button>
        </div>
    </form>
    <div><a href="/videogames/<%= videogame._id%>">
            <div>
                <button type="submit">back</button>
            </div>
    </div>