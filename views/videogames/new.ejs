<% layout('layout/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Add New Game</h1>
        <div class="col-6 offset-3">
            <form action="/videogames" method="POST">
                <div class="mb-2">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" id="title" name="videogame[title]">
                </div>
                <div class="mb-2">
                    <label class="form-label" for="price">Price:</label>
                    <input class="form-control" type="text" id="price" name="videogame[price]">
                </div>
                <div class="mb-2">
                    <label class="form-label" for="Images">image URL:</label>
                    <textarea class="form-control" id="text" name="videogame[image]"></textarea>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" id="description" name="videogame[description]"></textarea>
                </div>
                <div class="mb-2">
                    <button type="button" class="btn btn-success">ADD</button>
                </div>
            </form>
            <h5><a href="/videogames"> back</a></h5>
        </div>
    </div>